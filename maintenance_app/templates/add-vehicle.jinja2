{% block content %}
<div class="modal-body">

    <section class="form-info-sec">
        <p class="my-0">Please Enter Your Vehicle Information</p>
        <div class="form-wrapper">
            <form method="POST" action="{{ url_for('dashboard') }}">
                <fieldset class="form-field">
                    {{ form.year.label }}
                    {{ form.year }}
                </fieldset>
                <fieldset class="form-field">
                    {{ form.make.label }}
                    {{ form.make }}
                </fieldset>
                <fieldset class="form-field">
                    {{ form.model.label }}
                    {{ form.model }}
                </fieldset>
                <fieldset class="form-field">
                    {{ form.mileage.label }}
                    {{ form.mileage }}
                </fieldset>
                <fieldset class="form-field">
                    {{ form.color.label }}
                    {{ form.color }}
                </fieldset>
        </div>
    </section>
</div>
<div class="modal-footer">
    {{ form.submit }}
</div>
{% endblock %}