{% block add_vehicle %}

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Add Vehicle</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <section class="form-info-sec">
          <p class="my-0">Please Enter Your Vehicle Information</p>
          <form method="POST"></form>
          <div class="form-group">
            <label for="year"></label>
            <input type="year" class="form-control" id="year" name="year" placeholder="Year" />
          </div>
          <div class="form-group">
            <label for="make"></label>
            <input type="make" class="form-control" id="make" name="make" placeholder="Make" />
          </div>
          <div class="form-group">
            <label for="model"></label>
            <input type="model" class="form-control" id="model" name="model" placeholder="Model" />
          </div>
          <div class="form-group">
            <label for="mileage"></label>
            <input type="mileage" class="form-control" id="mileage" name="mileage" placeholder="Mileage" />
          </div>
          <br />
          </form>
        </section>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Add Vehicle</button>
      </div>
    </div>
  </div>
</div>

{% endblock %}