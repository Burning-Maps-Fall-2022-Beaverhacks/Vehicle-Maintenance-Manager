{% block add_vehicle %}

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Add Vehicle</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <section class="form-info-sec">
          <p class="my-0">Please Enter Your Vehicle Information</p>
          <div class="form-wrapper">
            <form method="POST" action="/dashboard/1"> {#{{ url_for('dashboard') }}#}
              <fieldset class="form-field mb-3">
                {{ form.year.label }}
                {{ form.year(class_="form-control", placeholder="YYYY") }}
              </fieldset>
              <fieldset class="form-field mb-3">
                {{ form.make.label }}
                {{ form.make(class_="form-control", placeholder="e.g., Chevrolet") }}
              </fieldset>
              <fieldset class="form-field mb-3">
                {{ form.model.label }}
                {{ form.model(class_="form-control", placeholder="e.g., Corvette") }}
              </fieldset>
              <fieldset class="form-field mb-3">
                {{ form.mileage.label }}
                {{ form.mileage(class_="form-control", placeholder="Number only") }}
              </fieldset>
              <fieldset class="form-field mb-3">
                {{ form.color.label }}
                {{ form.color(class_="form-control", placeholder="e.g., Red") }}
              </fieldset>
          </div>
        </section>
      </div>
      <div class="modal-footer">
        {{ form.submit(class_="btn btn-primary") }}
      </div>
    </div>
  </div>
</div>

{% endblock %}